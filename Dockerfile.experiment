FROM debian:jessie
EXPOSE 8080 8082
COPY video0.js /video0.js

# Install node.js 4.x
RUN \
    apt-get update -y \
&&  apt-get install -y curl \
&&  curl -sL https://deb.nodesource.com/setup_4.x | bash - \
&&  apt-get install -y nodejs

# Clean
RUN \
    apt-get remove -y curl \
&&  apt-get clean

RUN npm install ws
